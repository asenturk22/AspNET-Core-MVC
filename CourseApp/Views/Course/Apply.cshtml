@model Candidate

<div class="display-6">Apply</div>

<form action="">
    <div class="form-group my-2"><lable>E-Mail</lable><input name="Email" class="form-control" type="text"></div>
    <div class="form-group my-2"><lable>First Name</lable><input name="FirstName" class="form-control" type="text"></div>
    <div class="form-group my-2"><lable>Last Name</lable><input name="LastName" class="form-control" type="text"></div>

    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">12</option>
            <option value="23">13</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p><input type="radio" id="MVC" name="SelectedCourse" value="Asp.NET Core MVC"> Asp.NET Core MVC</p>
        <p><input type="radio" id="C#" name="SelectedCourse" value="C#"> C#</p>
        <p><input type="radio" id="NodeJS" name="SelectedCourse" value="Node.JS"> Node.JS</p>
        <p><input type="radio" id="Django" name="SelectedCourse" value="Django"> Django</p>

    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a href="/home" class="btn btn-warning">
            Home
        </a>
    </div>

</form>
